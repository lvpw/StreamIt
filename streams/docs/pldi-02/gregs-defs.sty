%% Time macros from Mitch Wand
% \thetime     Time in printable format   13:57
% \hours       Number of hours past midnight
% \minutes     Number of minutes past last hour

\newcount\hours
\newcount\minutes
\newcount\hh
\minutes=\time
\hours=\time
\divide\hours by60
\hh=\hours
\multiply\hh by60
\advance\minutes by -\hh

\def\thetime{\number\hours:\ifnum\minutes<10{0}\fi\number\minutes}

