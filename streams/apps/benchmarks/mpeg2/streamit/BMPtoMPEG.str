void->void pipeline BMPtoMPEG() {

  int width=352; // Hacked till we have reprogrammable splitjoins FEATURETODO
  int height=240;

  add void->int splitjoin {
    split roundrobin(0);
    // TODO Hardcoded to only generate 5 frames of output
    for (int i = 0; i < 3; i++) {
      add void->int pipeline {
        add FileReader<bit>("../input/cact_015_" + i + ".bmp");
        // See MPEGtoBMP.str for more details on FileReader<bit>
        add BMPStream_to_rawImageStream(width, height);
      }
    }
    join roundrobin(width*height*3);
  }

  add rawImageStream_to_MPEGStream(width, height);
  add FileWriter<bit>("./output.m2v");
}
