				//println("A");
				//println("A : eigenMatrix[x][y] = " + eigenMatrix[x][y] + " and best[minIndex].val = " + best[minIndex].val);
					
				//replace min value with new value.  
				best[minIndex].val 	= eigenMatrix[x][y];
