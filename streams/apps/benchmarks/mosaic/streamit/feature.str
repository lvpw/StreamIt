	for (int i = (iters - 1); i >= 0; i--)
	{
	  for (int j = 1; j <= i; j++)
	  {
		if (best[j-1].val > best[j].val)
		{
		  temp = best[j-1];
		  best[j-1] = best[j];
		  best[j] = temp;
