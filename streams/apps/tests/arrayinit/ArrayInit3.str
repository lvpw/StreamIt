/**
 * This tests array initializers as local variables.
 **/

void->void pipeline ArrayInit3 {
    add Source();
    add Tester();
    add Printer();
}

int->int filter Tester() {
    work pop 3 push 3 {
	// This array is based on knowing that Constant Propagatoin
	// can not handle 3-d arrays, so the initialization code will
	// not be propagated away.
        int[3][1][1] arr = {{{1}}, {{2}}, {{3}}};
        push(arr[0][0][0] * pop());
        push(arr[1][0][0] * pop());
        push(arr[2][0][0] * pop());
    }
}

void->int stateful filter Source {
    int i = 0;
    work push 1 { push(i++); }
}

int->void filter Printer {
    work pop 1 { println(pop()); }
}
