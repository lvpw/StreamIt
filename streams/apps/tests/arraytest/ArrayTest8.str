/**

This tests passing parameterized arrays to helper functions.

**/

void->void pipeline ArrayTest8 {
    add Source();
    add Test(10);
    add Printer();
}

int->int filter Test(int N) {
    // test field
    int[N] arr;

    work pop 1 push 1 {
	int x1 = pop();
	int x2 = get(arr);
	push(x1 + x2);
    }

    int get(int[N] arr) {
	return arr[0];
    }
}

void->int stateful filter Source {
    int i = 0;
    work push 1 { push(i++); }
}

int->void filter Printer {
    work pop 1 { println(pop()); }
}
