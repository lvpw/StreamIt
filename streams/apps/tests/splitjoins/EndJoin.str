/* Check allowability of programs ending with join 0

strc -library -i 2 EndJoin.str 
0
0
1
1
0
2
1
3
 */
void->void pipeline EndJoin {
    add void->int stateful filter {
	int i = 0;
	work push 1 {
	    push(i++);
	}
    }

    add int->void splitjoin {
	split roundrobin(1);
	add int->void filter {
	    work pop 1 {
		println(0); 
		println(pop());
	    }
	}
	add int->void filter {
	    work pop 1 {
		println(1); 
		println(pop());
	    }
	}
	join roundrobin(0);
    }
}
