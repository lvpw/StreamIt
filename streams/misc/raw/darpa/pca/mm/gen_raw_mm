for ($n = 0; $n < @netnum; $n++) {
    for ($t = 0; $t < @netype; $t++) {
	  for ($i = 0; $i < $num_rows; $i++) {
		for ($j = 0; $j < $num_cols; $j++) {
		    $vnet{"$netype[$t] $netnum[$n] $i $j"}[0] = $i-1;
		    $vnet{"$netype[$t] $netnum[$n] $i $j"}[1] = $i+1;

		    $hnet{"$netype[$t] $netnum[$n] $i $j"}[0] = $j-1;
		    $hnet{"$netype[$t] $netnum[$n] $i $j"}[1] = $j+1;
		}
	  }
    }  
}

foreach $key (sort keys %vnet) {
    $_ = $key;
    s/ /_/g;
    $suffix = $_;

    $sid = $vnet{$key}[0];
    $rid = $vnet{$key}[1];

    ($type, $id, $i, $j) = split(/ /, $key);

    print "\t<Net>\n";
    print "\t\t<Name>V_$suffix</Name>\n";
    print "\t\t<Dimension>1</Dimension>\n";
    print "\n";

    # make connection to fifo within a tile
    print "\t\t<Sender>\n";
    print "\t\t\t<Name>VIRTUAL_FIFO</Name>\n";
    print "\t\t\t<Index>+$i +$j</Index>\n";
    print "\t\t</Sender>\n";

    # make connection to link or if at the boundary
    # then link to a local memory
    print "\t\t<Sender>\n";
    if ($sid < 0) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
#	  print "\t\t\t<Index>"; print $j; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>V_$type"; print "_$id"; print "_$sid"; print "_$j"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Sender>\n";

    # these links are two way links
    print "\t\t<Sender>\n";
    if ($rid >= $num_rows) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>2</Index>\n";
#	  print "\t\t\t<Index>"; print $num_cols + $j; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>V_$type"; print "_$id"; print "_$rid"; print "_$j"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Sender>\n";

    # repeat process for receivers 
    print "\t\t<Receiver>\n";
    print "\t\t\t<Name>VIRTUAL_FIFO</Name>\n";
    print "\t\t\t<Index>+$i +$j</Index>\n";
    print "\t\t</Receiver>\n";

    print "\t\t<Receiver>\n";
    if ($rid >= $num_rows) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>2</Index>\n";
#	  print "\t\t\t<Index>"; print $num_cols + $j; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>V_$type"; print "_$id"; print "_$rid"; print "_$j"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Receiver>\n";

    print "\t\t<Receiver>\n";
    if ($sid < 0) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
#	  print "\t\t\t<Index>"; print $j; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>V_$type"; print "_$id"; print "_$sid"; print "_$j"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Receiver>\n";
    print "\n";

    print "\t\t<Latency>1</Latency>\n";
    print "\t\t<Bw>4</Bw>\n";
    print "\t</Net>\n";
}

foreach $key (sort keys %hnet) {
    $_ = $key;
    s/ /_/g;
    $suffix = $_;

    $sid = $hnet{$key}[0];
    $rid = $hnet{$key}[1];

    ($type, $id, $i, $j) = split(/ /, $key);

    print "\t<Net>\n";
    print "\t\t<Name>H_$suffix</Name>\n";
    print "\t\t<Dimension>1</Dimension>\n";
    print "\n";

    print "\t\t<Sender>\n";
    print "\t\t\t<Name>VIRTUAL_FIFO</Name>\n";
    print "\t\t\t<Index>+$i +$j</Index>\n";
    print "\t\t</Sender>\n";

    print "\t\t<Sender>\n";
    if ($sid < 0) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>3</Index>\n";
#	  print "\t\t\t<Index>"; print 2 * $num_cols + $i; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>H_$type"; print "_$id"; print "_$i"; print "_$sid"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Sender>\n";

    print "\t\t<Sender>\n";
    if ($rid >= $num_rows) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>1</Index>\n";
#	  print "\t\t\t<Index>"; print 2 * $num_cols + $num_rows + $i; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>H_$type"; print "_$id"; print "_$i"; print "_$rid"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Sender>\n";

    print "\t\t<Receiver>\n";
    print "\t\t\t<Name>VIRTUAL_FIFO</Name>\n";
    print "\t\t\t<Index>+$i +$j</Index>\n";
    print "\t\t</Receiver>\n";

    print "\t\t<Receiver>\n";
    if ($rid >= $num_rows) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>1</Index>\n";
#	  print "\t\t\t<Index>"; print 2 * $num_cols + $num_rows + $i; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>H_$type"; print "_$id"; print "_$i"; print "_$rid"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Receiver>\n";

    print "\t\t<Receiver>\n";
    if ($sid < 0) {
	  print "\t\t\t<Name>LMEM</Name>\n";
	  print "\t\t\t<Index>3</Index>\n";
#	  print "\t\t\t<Index>"; print 2 * $num_cols + $i; print "</Index>\n";
    }
    else {
	  print "\t\t\t<Name>H_$type"; print "_$id"; print "_$i"; print "_$sid"; print "</Name>\n";
	  print "\t\t\t<Index>0</Index>\n";
    }
    print "\t\t</Receiver>\n";
    print "\n";

    print "\t\t<Latency>1</Latency>\n";
    print "\t\t<Bw>4</Bw>\n";
    print "\t</Net>\n";
}

print "\n";
print "</Root>\n";
