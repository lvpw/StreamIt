<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="streamit.eclipse.texteditor"
   name="%pluginName"
   version="2.1.0"
   provider-name="%providerName"
   class="streamit.eclipse.texteditor.StreamItEditorPlugin">

   <runtime>
      <library name="texteditor.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="launcher"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.debug.ui"/>
      <import plugin="org.eclipse.jdt.debug"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.eclipse.jface.text"/>
   </requires>


<!-- ================================================================== -->
<!-- Extension point: org.eclipse.ui.editors                            -->
<!-- ================================================================== -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%streamItEditorName"
            icon="icons/obj16/java.gif"
            extensions="str"
            contributorClass="org.eclipse.jdt.internal.ui.javaeditor.CompilationUnitEditorActionContributor"
            class="streamit.eclipse.texteditor.StreamItEditor"
            id="StreamItEditor">
      </editor>
   </extension>
<!-- ================================================================== -->
<!-- Extension point: org.eclipse.ui.preferencePages                    -->
<!-- ================================================================== -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%streamItPreferencePage"
            class="streamit.eclipse.texteditor.StreamItEditorPreferencePage"
            id="streamit.eclipse.texteditor.Page1">
      </page>
   </extension>
<!-- ================================================================== -->
<!-- Extension point: org.eclipse.ui.documentProviders                   -->
<!-- ================================================================== -->
   <extension
         point="org.eclipse.ui.documentProviders">
      <provider
            extensions="str"
            class="streamit.eclipse.texteditor.StreamItDocumentProvider"
            id="streamit.eclipse.texteditor.StreamItDocumentProvider">
      </provider>
   </extension>
<!-- ================================================================== -->
<!-- Extension point: org.eclipse.ui.popupMenus			                -->
<!-- ================================================================== -->
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#StreamItRulerContext"
            id="streamit.eclipse.texteditor.StreamItEditorPopupActions">
         <action
               label="%StreamItBreakpointProperties.label"
               class="streamit.eclipse.texteditor.StreamItBreakpointPropertiesRulerActionDelegate"
               menubarPath="debug"
               id="streamit.eclipse.texteditor.StreamItBreakpointPropertiesRulerActionDelegate">
         </action>
         <action
               label="%AddWatchpoint.label"
               class="streamit.eclipse.texteditor.ManageWatchpointRulerActionDelegate"
               menubarPath="debug"
               id="streamit.eclipse.texteditor.ManageWatchpointRulerActionDelegate">
         </action>
         <action
               label="%AddMethodBreakpoint.label"
               class="streamit.eclipse.texteditor.ManageMethodBreakpointRulerActionDelegate"
               menubarPath="debug"
               id="streamit.eclipse.texteditor.ManageMethodBreakpointRulerActionDelegate">
         </action>
         <action
               label="%EnableBreakpoint.label"
               class="streamit.eclipse.texteditor.EnableDisableBreakpointRulerActionDelegate"
               menubarPath="debug"
               id="streamit.eclipse.texteditor.EnableDisableBreakpointRulerActionDelegate">
         </action>
         <action
               label="%AddBreakpoint.label"
               class="streamit.eclipse.texteditor.ManageBreakpointRulerActionDelegate"
               menubarPath="debug"
               id="streamit.eclipse.texteditor.ManageBreakpointRulerActionDelegate">
         </action>
         <action
               label="%AddTask.label"
               helpContextId="org.eclipse.ui.AddTask_action_context"
               tooltip="%AddTask.tooltip"
               class="org.eclipse.ui.texteditor.TaskRulerAction"
               menubarPath="add"
               id="org.eclipse.ui.texteditor.TaskRulerAction">
         </action>
         <action
               label="%AddBookmark.label"
               helpContextId="org.eclipse.ui.bookmark_action_context"
               tooltip="%AddBookmark.tooltip"
               class="org.eclipse.ui.texteditor.BookmarkRulerAction"
               menubarPath="add"
               id="org.eclipse.ui.texteditor.BookmarkRulerAction">
         </action>
      </viewerContribution>
   </extension>

</plugin>
